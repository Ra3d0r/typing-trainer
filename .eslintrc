{
    "env": { 
        "browser": true,
        "es2021": true 
    },
    "extends": [ 
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "@babel/eslint-parser", 
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module" 
    },
    "plugins": [
        "react", 
        "prettier",
        "react-hooks"
    ],
    "rules": {
        "prettier/prettier": "error",
        "react/prop-types": 0,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn" 
    }
}